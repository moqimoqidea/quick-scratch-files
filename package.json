{
  "name": "scratch-files",
  "displayName": "scratch-files",
  "description": "scratch-files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "temporaryFolder.folderPath": {
          "type": "string",
          "default": "",
          "description": "Path to the folder for temporary files",
          "scope": "application"
        }
      }
    },
    "commands": [
      {
        "command": "scratch-files.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "temporaryFolder.setFolder",
        "title": "Set Temporary Folder"
      },
      {
        "command": "temporaryFolder.createFile",
        "title": "Create Temporary File"
      }
    ]
  },
  "configuration": {
    "type": "object",
    "title": "Temporary Folder",
    "properties": {
      "temporaryFolder.folderPath": {
        "type": "string",
        "default": "",
        "description": "Path to save temporary files"
      }
    }
  },
  "keybindings": [
    {
      "command": "temporaryFolder.createFile",
      "key": "ctrl+shift+alt+n",
      "when": "editorTextFocus"
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vscode": "^1.1.37"
  }
}
